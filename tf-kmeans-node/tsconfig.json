{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist",
    "watch": true,
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["node_modules", "dist"]
}
